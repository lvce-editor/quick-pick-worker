{
  "name": "@lvce-editor/quick-pick-worker",
  "version": "0.0.0-dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lvce-editor/quick-pick-worker.git"
  },
  "license": "MIT",
  "author": "Lvce Editor",
  "type": "module",
  "main": "src/quickPickWorkerMain.ts",
  "scripts": {
    "dev": "cd ../../ && npm run dev",
    "test": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --detectOpenHandles --forceExit",
    "test:watch": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch"
  },
  "jest": {
    "injectGlobals": false,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90
      }
    }
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@lvce-editor/assert": "^1.5.1",
    "@lvce-editor/fuzzy-search": "^2.0.1",
    "@lvce-editor/i18n": "^2.1.0",
    "@lvce-editor/list": "^1.7.0",
    "@lvce-editor/rpc": "^6.4.0",
    "@lvce-editor/rpc-registry": "^9.1.0",
    "@lvce-editor/verror": "^1.7.0",
    "@lvce-editor/viewlet-registry": "^4.1.0",
    "@lvce-editor/virtual-dom-worker": "^8.9.0",
    "@types/node": "^25.3.1",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6"
  },
  "dependencies": {
    "@lvce-editor/constants": "^4.0.0"
  }
}
